<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/fon">
    <ImageView
        android:id="@+id/shapeableImageView2"
        android:layout_width="420dp"
        android:layout_height="520dp"
        android:background="@drawable/oblogka"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.264" />
    <Button
        android:id="@+id/buttonStart"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round"
        android:fontFamily="@font/shrift2"
        android:gravity="bottom|center"
        android:onClick="Nachat"
        android:text="Начать"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonChoice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.752"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />
    <Button
        android:id="@+id/buttonContinue"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/button"
        android:fontFamily="@font/shrift2"
        android:gravity="bottom|center"
        android:onClick="continueGame"
        android:text="Продолжить"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonStart"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />
    <Button
        android:id="@+id/buttonChoice"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/button"
        android:fontFamily="@font/shrift2"
        android:gravity="bottom|center"
        android:onClick="ViborGlavi"
        android:text="Выбрать главу"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonContinue"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:layout_marginBottom="5dp"
        android:bufferType="spannable"
        android:drawingCacheQuality="auto"
        android:ellipsize="start"
        android:focusable="auto"
        android:text="В какой-то момент лучшие и казалось бы самые близкие друзья обрывают все контакты, и становятся для друг друга врагами. У них начинается война, но не только друг с другом. Они воюют с собой, со своими чувствами и эмоциями. И вот пришло время изменений, время, когда всё будет совсем иначе."
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/shapeableImageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.825"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/shrift2"
        android:text="Найти себя"
        android:textColor="@color/white"
        android:textSize="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shapeableImageView2"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/money"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/button"
        android:background="@drawable/round"
        android:fontFamily="@font/shrift"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/tea"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/button"
        android:fontFamily="@font/shrift"
        android:background="@drawable/round"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.938"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/money"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:layout_width="35dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/drink"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="@+id/tea"
        app:layout_constraintTop_toTopOf="@+id/tea"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/coinsText"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:fontFamily="@font/shrift"
        android:elevation="3dp"
        android:text="0"
        android:textSize="25dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/money"
        app:layout_constraintEnd_toEndOf="@+id/money"
        app:layout_constraintStart_toStartOf="@+id/money"
        app:layout_constraintTop_toTopOf="@+id/money" />
    <TextView
        android:id="@+id/teaText"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:fontFamily="@font/shrift"
        android:elevation="3dp"
        android:text="0"
        android:textSize="25dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/tea"
        app:layout_constraintEnd_toEndOf="@+id/tea"
        app:layout_constraintStart_toStartOf="@+id/tea"
        app:layout_constraintTop_toTopOf="@+id/tea" />
    <Button
        android:id="@+id/settings"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/button"
        android:onClick="settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/settings"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/settings"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/ad"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/button"
        android:onClick="ad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/ad"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ad"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>